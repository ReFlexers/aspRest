<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/css/layout.css" />
</head>
<body>
    <div class="header">
        <div class="logo">
            <a href="~/Menu"> <img src="/images/gus.png" alt="Логотип"></a>
        </div>
        <div class="nav-menu">
            <a href="~/Home">Главная</a>
            <a href="~/Menu">Меню</a>
            <a href="~/Action">Акции</a>
            <a href="~/Reviews">Отзывы</a>
        </div>
        <div class="auth">
            @if (User.Identity.IsAuthenticated)
            {
                <a href="~/Account/Account">Личный кабинет</a>
                <span>|</span>
                <form id="logoutForm" action="/Logout" method="post">
                    <button type="submit" class="btn-link">Выход</button>
                </form>
            }
            else
            {
                <a href="~/Login">Вход</a>
                <span>|</span>
                <a href="~/Register">Регистрация</a>
            }
        </div>
    </div>

    <div class="container">
        <div>
            @RenderBody()
        </div>
    </div>

    <footer>
        <div class="footer-content">
            <div class="footer-left">
                <h3>Контакты</h3>
                <p>Телефон: +7 (123) 456-7890</p>
                <p>Email: info@test.com</p>
                <p>Адрес: ул. русская, д. 123</p>
            </div>
            <div class="footer-right">
                <h3>Ссылки</h3>
                <ul>
                    <li><a href="#">О нас</a></li>
                    <li><a href="#">Услуги</a></li>
                    <li><a href="#">Контакты</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2024 Все права защищены | Белый Гусь </p>
        </div>
    </footer>

</body>
</html>
